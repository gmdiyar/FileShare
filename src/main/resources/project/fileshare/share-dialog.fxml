<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="195.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.fileshare.Controllers.ShareMenuController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="300.0" spacing="15.0">
         <children>
            <TextField fx:id="shareWithField" alignment="CENTER" promptText="Enter username">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#handleShareButton" text="Share" />
         </children>
      </VBox>
   </children>
</AnchorPane>
