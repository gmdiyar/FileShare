<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.fileshare.Controllers.ShareMenuController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="320.0" spacing="15.0">
         <children>
            <TextField fx:id="shareWithField" alignment="CENTER" promptText="Enter username or email">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#handleShareButton" text="Share" />
         </children>
      </VBox>
   </children>
</AnchorPane>
